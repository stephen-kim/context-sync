{
  "name": "@claustrum/mcp-adapter",
  "version": "0.1.6",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "start:remote": "node dist/bridge-main.js",
    "bootstrap:remote": "node dist/bridge-main.js --install-only",
    "test": "pnpm --filter @claustrum/shared build && node --import tsx --test src/*.test.ts",
    "lint": "tsc -p tsconfig.json --noEmit"
  },
  "bin": {
    "claustrum-mcp": "dist/bridge-main.js"
  },
  "dependencies": {
    "@claustrum/shared": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3"
  }
}
