{
  "name": "@claustrum/server",
  "version": "2.0.6",
  "description": "Claustrum monorepo: shared memory layer for AI systems",
  "type": "module",
  "main": "apps/mcp-adapter/dist/index.js",
  "types": "apps/mcp-adapter/dist/index.d.ts",
  "scripts": {
    "dev": "pnpm -r dev",
    "build": "pnpm -r build",
    "lint": "node scripts/check-route-zod-boundary.mjs && pnpm -r lint",
    "test": "pnpm -r test",
    "build:claustrum": "echo \"legacy root build removed; use pnpm --filter @claustrum/mcp-adapter build\"",
    "build:workspace": "pnpm -r --filter @claustrum/shared --filter @claustrum/memory-core --filter @claustrum/mcp-adapter --filter @claustrum/admin-ui --filter @claustrum/docs-site build",
    "prepare": "pnpm --filter @claustrum/mcp-adapter build",
    "db:migrate": "pnpm --filter @claustrum/memory-core db:migrate",
    "db:seed": "pnpm --filter @claustrum/memory-core db:seed",
    "db:migrate:claustrum": "pnpm --filter @claustrum/memory-core db:migrate",
    "db:migrate:dev": "pnpm --filter @claustrum/memory-core db:migrate",
    "dev:workspace": "pnpm --filter @claustrum/shared build && pnpm -r --parallel --filter @claustrum/shared --filter @claustrum/memory-core --filter @claustrum/mcp-adapter --filter @claustrum/admin-ui dev",
    "dev:claustrum": "pnpm --filter @claustrum/mcp-adapter dev",
    "compose:up": "docker compose up -d",
    "compose:up:localdb": "docker compose --profile localdb up -d",
    "compose:down": "docker compose down",
    "compose:dev:up": "docker compose -f docker-compose.dev.yml up -d",
    "compose:dev:up:localdb": "docker compose -f docker-compose.dev.yml --profile localdb up -d",
    "compose:dev:down": "docker compose -f docker-compose.dev.yml down",
    "start": "pnpm --filter @claustrum/mcp-adapter start",
    "watch": "pnpm --filter @claustrum/mcp-adapter dev",
    "test:claustrum": "node scripts/smoke-test.cjs",
    "test:workspace": "pnpm -r --filter @claustrum/shared --filter @claustrum/memory-core --filter @claustrum/mcp-adapter --filter @claustrum/admin-ui --filter @claustrum/docs-site test",
    "docs:dev": "pnpm --filter @claustrum/docs-site dev",
    "docs:build": "pnpm --filter @claustrum/docs-site build",
    "docs:start": "pnpm --filter @claustrum/docs-site start",
    "version:patch": "node scripts/bump-patch-version.mjs",
    "mcp:helper": "node scripts/mcp-config-helper.js",
    "eval:bundle": "tsx scripts/eval/run_bundle_eval.ts",
    "eval:diff": "tsx scripts/eval/diff_bundle.ts",
    "eval:report": "bash -lc 'latest=$(ls -1dt eval/runs/* 2>/dev/null | head -n1); if [ -z \"$latest\" ]; then echo \"No eval runs found\"; exit 1; fi; cat \"$latest/report.md\"'",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "Claustrum",
    "Context Management",
    "mcp",
    "mcp-server",
    "model-context-protocol",
    "ai",
    "ai-assistant",
    "context layer",
    "memory",
    "claude",
    "cursor",
    "github-copilot",
    "workspace",
    "file-access",
    "file-operations",
    "code-search",
    "git-integration",
    "developer-tools",
    "productivity",
    "typescript",
    "continue",
    "continue.dev",
    "zed",
    "windsurf",
    "tabnine",
    "copilot",
    "Notion",
    "Notion Integration",
    "documentation",
    "Notion MCP server"
  ],
  "author": {
    "name": "mamba",
    "url": "https://github.com/Intina47"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stephen-kim/claustrum.git"
  },
  "bugs": {
    "url": "https://github.com/stephen-kim/claustrum/issues"
  },
  "homepage": "https://github.com/stephen-kim/claustrum#readme",
  "files": [
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "apps/mcp-adapter/dist/**/*",
    "apps/mcp-adapter/package.json",
    "packages/shared/dist/**/*",
    "packages/shared/package.json"
  ],
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@notionhq/client": "^5.4.0",
    "chokidar": "^4.0.3",
    "commander": "^11.0.5",
    "js-yaml": "^4.1.1",
    "knex": "^3.1.0",
    "pg": "^8.12.0",
    "readline-sync": "^1.4.10",
    "simple-git": "^3.30.0"
  },
  "devDependencies": {
    "@types/chokidar": "^1.7.5",
    "@types/node": "^20.11.0",
    "@types/readline-sync": "^1.4.8",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "overrides": {
    "content-type": "1.0.5",
    "detect-libc": "2.1.2",
    "http-errors": "1.8.1"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "packageManager": "pnpm@9.12.3",
  "private": true
}
