{
  "name": "@context-sync/server",
  "version": "2.0.0",
  "description": "Universal Context layer McP server",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "context-sync": "./dist/index.js",
    "context-sync-setup": "./bin/setup.cjs"
  },
  "scripts": {
    "build": "npm run build:context-sync",
    "build:context-sync": "tsc",
    "build:workspace": "pnpm -r --filter @context-sync/shared --filter @context-sync/memory-core --filter @context-sync/mcp-adapter --filter @context-sync/admin-ui build",
    "prepare": "npm run build:context-sync",
    "postinstall": "node bin/install.cjs || true",
    "preinstall": "node -e \"console.log('\\nðŸ§  Installing Context Sync MCP Server...\\n')\"",
    "setup": "node bin/setup.cjs",
    "db:migrate": "pnpm --filter @context-sync/memory-core db:migrate",
    "db:seed": "pnpm --filter @context-sync/memory-core db:seed",
    "db:migrate:context-sync": "node dist/db-migrate.js",
    "db:migrate:dev": "npm run build && node dist/db-migrate.js",
    "dev": "pnpm --filter @context-sync/shared build && pnpm -r --parallel --filter @context-sync/shared --filter @context-sync/memory-core --filter @context-sync/mcp-adapter --filter @context-sync/admin-ui dev",
    "dev:context-sync": "tsx src/index.ts",
    "compose:up": "docker compose up -d",
    "compose:up:localdb": "docker compose --profile localdb up -d",
    "compose:down": "docker compose down",
    "compose:dev:up": "docker compose -f docker-compose.dev.yml up -d",
    "compose:dev:up:localdb": "docker compose -f docker-compose.dev.yml --profile localdb up -d",
    "compose:dev:down": "docker compose -f docker-compose.dev.yml down",
    "wiki:sync": "bash scripts/sync-wiki.sh",
    "start": "node dist/index.js",
    "watch": "tsx watch src/index.ts",
    "test": "node scripts/smoke-test.cjs",
    "test:workspace": "pnpm -r --filter @context-sync/shared --filter @context-sync/memory-core --filter @context-sync/mcp-adapter --filter @context-sync/admin-ui test",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "Context Sync",
    "Context Management",
    "mcp",
    "mcp-server",
    "model-context-protocol",
    "ai",
    "ai-assistant",
    "context layer",
    "memory",
    "claude",
    "cursor",
    "github-copilot",
    "workspace",
    "file-access",
    "file-operations",
    "code-search",
    "git-integration",
    "developer-tools",
    "productivity",
    "typescript",
    "continue",
    "continue.dev",
    "zed",
    "windsurf",
    "tabnine",
    "copilot",
    "Notion",
    "Notion Integration",
    "documentation",
    "Notion MCP server"
  ],
  "author": {
    "name": "mamba",
    "url": "https://github.com/Intina47"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Intina47/context-sync.git"
  },
  "bugs": {
    "url": "https://github.com/Intina47/context-sync/issues"
  },
  "homepage": "https://github.com/Intina47/context-sync#readme",
  "files": [
    "dist/**/*",
    "bin/**/*",
    "migrations/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@notionhq/client": "^5.4.0",
    "chokidar": "^4.0.3",
    "commander": "^11.0.5",
    "js-yaml": "^4.1.1",
    "knex": "^3.1.0",
    "pg": "^8.12.0",
    "readline-sync": "^1.4.10",
    "simple-git": "^3.30.0"
  },
  "devDependencies": {
    "@types/chokidar": "^1.7.5",
    "@types/node": "^20.11.0",
    "@types/readline-sync": "^1.4.8",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "overrides": {
    "content-type": "1.0.5",
    "detect-libc": "2.1.2",
    "http-errors": "1.8.1"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "packageManager": "pnpm@9.12.3"
}
